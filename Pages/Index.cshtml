@page
@model IndexModel
@{
    ViewData["Title"] = "Pagina Inicial";
    Layout = "~/Pages/Shared/_layoutSemBarra.cshtml";
}

<div class="container">
    <div class="row justify-content-center align-items-center">
        <div class="col-md-6">
            <div class="col-md-12">
                <form class="form" method="post">
                    <h3 class="text-center">Login</h3>
                    <div class="form-group">
                        <label>Usuario:</label><br>
                        <input class="form-control" style="text-transform: uppercase" asp-for="usuario">
                    </div>
                    <div class="form-group">
                        <label>Senha:</label><br>
                        <input class="form-control" asp-for="senha" style="text-transform: uppercase" type="password" />
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-primary btn-lg" value="Login">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

